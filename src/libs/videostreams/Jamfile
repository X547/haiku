SubDir HAIKU_TOP src libs videostreams ;

AddSubDirSupportedPlatforms libbe_test ;

UseHeaders [ FDirName $(HAIKU_TOP) headers libs videostreams ] : true ;
UseHeaders [ FDirName $(HAIKU_TOP) headers private app ] : true ;
UseHeaders [ FDirName $(HAIKU_TOP) headers private shared ] : true ;

local architectureObject ;
for architectureObject in [ MultiArchSubDirSetup ] {
	on $(architectureObject) {

		SharedLibrary [ MultiArchDefaultGristFiles libvideostreams.so ] :
			AreaCloner.cpp
			BufferQueue.cpp
			CompositeConsumer.cpp
			CompositeProducer.cpp
			CompositeProxy.cpp
			RasBuf.cpp
			VideoBufferBindBitmap.cpp
			VideoBufferBindSW.cpp
			VideoBufferUtils.cpp
			VideoConsumer.cpp
			VideoNode.cpp
			VideoProducer.cpp
			:
			be
			[ TargetLibstdc++ ] [ TargetLibsupc++ ]
			;
	}
}
