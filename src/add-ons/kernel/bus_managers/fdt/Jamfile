SubDir HAIKU_TOP src add-ons kernel bus_managers fdt ;

UsePrivateKernelHeaders ;
UseLibraryHeaders [ FDirName libfdt ] ;

SubDirCcFlags -fvisibility=hidden ;
SubDirC++Flags -fvisibility=hidden ;

local libFDTSources =
	fdt.c
	fdt_ro.c
	fdt_rw.c
	fdt_strerror.c
	fdt_sw.c
	fdt_wip.c
;

KernelAddon fdt :
	FdtBus.cpp
	$(libFDTSources)
	;

KernelStaticLibrary kernel_fdt :
	$(libFDTSources)
	;

SEARCH on [ FGristFiles $(libFDTSources) ]
	= [ FDirName $(HAIKU_TOP) src libs libfdt ] ;

